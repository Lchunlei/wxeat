<navigation id='Navigation' show-icon="{{true}}" title="订单列表" show-title="{{true}}" class=""></navigation>
<view class="container">
  <view class="status-box">
    <view bindtap="statusTap" class="status-label {{index == currentType ? 'active' : ''}}" wx:for-items="{{statusType}}" wx:key="{{index}}" data-index="{{index}}">
      {{item}}
      <view class="{{tabClass[index]}}"></view>
    </view>
  </view>

  <view class="no-order" hidden="{{isEmpty ? false : true}}" style="height: {{bodyHeight}}px;">
    <image src="/images/empty_order.png" class="no-order-img"></image>
    <view class="text">还没有订单呢</view>
  </view>
    <!--客单展示S-->
  <view class="order-list" hidden="{{ctmBills ? false : true}}">
    <view class="a-order" wx:for-items="{{ctmBills}}" wx:key="{{index}}">
      <view class="order-date" bindtap="orderDetail" data-id="{{item.userId}}">
        <view class="date-box">下单时间：{{item.makeTime}}</view>
        <!--
        <view class="status {{(item.billStatus==0 || item.billStatus==1) ? '':'red'}}">{{item.billStatus}}</view>
        -->
      </view>
      <view class="goods-info" bindtap="orderDetail" data-id="{{item.userId}}">
        <view class="goods-des">
          <view><text decode="{{true}}">顾客号：{{item.userId}} &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; 餐桌号：{{item.deskCode}} </text></view>
          <!--遍历该客人点餐-->
        <view wx:for-items="{{item.bills}}" wx:key="{{index}}">
          <view>
            <text decode="{{true}}">菜名： {{item.foodName}} &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; 份数：{{item.eatNum}} </text>
          </view>
        </view>

        </view>
      </view>
      <!--
      <view bindtap="orderDetail" data-id="{{item.id}}">
        <scroll-view class="goods-img-container" scroll-x="true">
          <view class="img-box" wx:for-items="{{goodsMap[item.id]}}" wx:key="{{index}}">
            <image src="{{item.pic}}" class="goods-img"></image>
          </view>
        </scroll-view>
      </view>
      -->
      <view class="price-box">
        <view class="total-price">合计：¥ {{item.totalPay/100}}</view>
				<view class="btn-box">
					<view class="btn cancel-btn" bindtap="cancelOrderTap" data-id="{{item.id}}">取消订单</view>
					<view class="btn topay-btn" bindtap="toPayTap" data-id="{{item.id}}" data-money="{{item.amountReal}}">收款完成</view>
				</view>
      </view>
    </view>
  </view>
    <!--客单展示E-->
    <!--出餐单S-->
  <view class="order-list" hidden="{{orderList ? false : true}}">
    <view class="a-order" wx:for-items="{{orderList}}" wx:key="{{index}}">
      <view class="order-date" bindtap="orderDetail" data-id="{{item.billId}}">
        <view class="date-box">下单时间：{{item.cTime}}</view>
        <view class="status {{(item.billStatus==0 || item.billStatus==1) ? '':'red'}}">{{item.billStatus}}</view>
      </view>
      <view class="goods-info" bindtap="orderDetail" data-id="{{item.billId}}">
        <view class="goods-des">
          <view><text decode="{{true}}">顾客号：{{item.userId}} &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; 餐桌号：{{item.deskCode}} </text></view>
          <view wx:if="{{item.foodName && item.foodName != ''}}">
            <text decode="{{true}}">菜名： {{item.foodName}} &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; 份数：{{item.eatNum}} </text>
          </view>
        </view>
      </view>
      <!--
      <view bindtap="orderDetail" data-id="{{item.id}}">
        <scroll-view class="goods-img-container" scroll-x="true">
          <view class="img-box" wx:for-items="{{goodsMap[item.id]}}" wx:key="{{index}}">
            <image src="{{item.pic}}" class="goods-img"></image>
          </view>
        </scroll-view>
      </view>
      -->
      <view class="price-box">
        <view class="total-price">合计：¥ {{item.totalPrice/100}}</view>
				<view class="btn-box">
					<view class="btn cancel-btn" hidden="{{item.billStatus==0? false : true}}" bindtap="cancelOrderTap" data-id="{{item.id}}">取消订单</view>
					<view class="btn topay-btn" hidden="{{item.billStatus==0? false: true}}" bindtap="toPayTap" data-id="{{item.id}}" data-money="{{item.amountReal}}">立即支付</view>
					<view class="btn topay-btn" hidden="{{item.billStatus==3? false: true}}" bindtap="orderDetail" data-id="{{item.id}}">去评价</view>
					<form bindsubmit="toConfirmTap" report-submit="true" data-id="{{item.id}}">
					  <view wx:if="{{item.billStatus==2}}">
					    <button class="btn topay-btn" formType="submit">确认收货</button>
					  </view>
					</form>
				</view>
      </view>
    </view>
  </view>
    <!--出餐单E-->
</view>